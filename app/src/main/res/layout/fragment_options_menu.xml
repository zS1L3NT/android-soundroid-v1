<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragments.OptionsMenuFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/options_menu_cover_wrapper"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/options_menu_cover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/playing_cover_default"
            android:contentDescription="@string/playing_cover" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/options_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:text="@string/options_menu_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_menu_cover_wrapper" />

    <TextView
        android:id="@+id/options_menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="@string/options_menu_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_menu_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/options_menu_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:layoutAnimation="@anim/recycler_view_animation"
        tools:listitem="@layout/options_menu_list_item"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>