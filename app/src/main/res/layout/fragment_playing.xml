<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_playing"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragments.PlayingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:padding="16dp">

        <TextView
            android:id="@+id/playing_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carme"
            android:text="@string/playing_from"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="@string/Nil"
            app:layout_constraintEnd_toEndOf="@+id/playing_from"
            app:layout_constraintStart_toStartOf="@+id/playing_from"
            app:layout_constraintTop_toBottomOf="@+id/playing_from" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="16dp">

        <ImageView
            android:id="@+id/song_cover"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_weight="6"
            android:background="@drawable/song_cover_shadow"
            android:contentDescription="@string/image_cover"
            android:elevation="5dp"
            android:src="@drawable/default_cover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:elevation="6dp"
            android:text="@string/undefined_error_message"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/retry_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:elevation="6dp"
            android:text="@string/click_to_retry"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="16dp">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nil"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/song_artiste"
            app:layout_constraintStart_toStartOf="@+id/song_artiste" />

        <TextView
            android:id="@+id/song_artiste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.6"
            android:text="@string/Nil"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/song_seekbar"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/song_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shuffle_song"
            android:src="@drawable/song_shuffle_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/song_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_back" />

        <ImageView
            android:id="@+id/song_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_song"
            android:src="@drawable/song_back_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_play_pause"
            app:layout_constraintStart_toEndOf="@+id/song_shuffle"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause" />

        <ImageView
            android:id="@+id/song_play_pause"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/play_song"
            android:src="@drawable/song_play_fill_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar" />

        <ImageView
            android:id="@+id/song_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/next_song"
            android:src="@drawable/song_next_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_loop"
            app:layout_constraintStart_toEndOf="@+id/song_play_pause"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause" />

        <ImageView
            android:id="@+id/song_loop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/loop_song"
            android:src="@drawable/song_loop_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/song_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_next" />

        <SeekBar
            android:id="@+id/song_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/song_seekbar"
            android:thumbTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/song_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:alpha="0.5"
            android:text="@string/song_default_time"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/song_seekbar"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar" />

        <TextView
            android:id="@+id/song_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:alpha="0.5"
            android:text="@string/song_default_time"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/song_seekbar"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar" />

        <ProgressBar
            android:id="@+id/song_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:indeterminateTint="@color/white"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/song_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/converting_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0"
        app:indicatorColor="@color/theme_1"
        app:trackColor="@color/theme_4" />

</LinearLayout>