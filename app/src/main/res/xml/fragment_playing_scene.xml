<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/song_artiste"
            app:layout_constraintStart_toStartOf="@+id/song_artiste">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="22" />
        </Constraint>
        <Constraint
            android:id="@+id/song_artiste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toTopOf="@+id/song_seekbar"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="15" />
        </Constraint>
        <Constraint
            android:id="@+id/song_play_pause"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_play_pause"
            app:layout_constraintStart_toEndOf="@+id/song_shuffle"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/song_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_back">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_loop"
            app:layout_constraintStart_toEndOf="@+id/song_play_pause"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_loop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/song_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_next">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/song_play_pause_mini"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/song_play_pause"
            app:layout_constraintLeft_toLeftOf="@id/song_play_pause"
            app:layout_constraintRight_toRightOf="@id/song_play_pause"
            app:layout_constraintTop_toTopOf="@id/song_play_pause">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_loading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/song_title"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/song_title"
            android:alpha="0" />
        <Constraint
            android:id="@+id/retry_message"
            android:elevation="6dp"
            app:layout_constraintEnd_toEndOf="@+id/song_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/error_message"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@+id/song_cover" />
        <Constraint
            android:id="@+id/error_message"
            android:elevation="6dp"
            app:layout_constraintEnd_toEndOf="@+id/song_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/song_cover"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@+id/song_cover"
            app:layout_constraintStart_toStartOf="@+id/song_cover" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/song_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/song_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="@+id/song_play_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@+id/song_seekbar"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar" />
        <Constraint
            android:id="@+id/song_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@+id/song_seekbar"
            app:layout_constraintTop_toBottomOf="@+id/song_seekbar" />
        <Constraint
            android:id="@+id/song_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/song_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_back">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_play_pause"
            app:layout_constraintStart_toEndOf="@+id/song_shuffle"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_play_pause"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="32dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/song_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/song_loop"
            app:layout_constraintStart_toEndOf="@+id/song_play_pause"
            app:layout_constraintTop_toTopOf="@+id/song_play_pause">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/song_loop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/song_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/song_next">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@+id/playing_from"
            app:layout_constraintStart_toStartOf="@+id/playing_from"
            app:layout_constraintTop_toBottomOf="@+id/playing_from" />
        <Constraint
            android:id="@+id/playing_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:elevation="6dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintBottom_toBottomOf="@+id/song_cover"
            app:layout_constraintEnd_toEndOf="@+id/song_cover"
            app:layout_constraintStart_toStartOf="@+id/song_cover"
            app:layout_constraintTop_toTopOf="@+id/song_cover" />
        <Constraint
            android:id="@+id/retry_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:elevation="6dp"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintEnd_toEndOf="@+id/song_cover"
            app:layout_constraintStart_toStartOf="@+id/song_cover"
            app:layout_constraintTop_toBottomOf="@+id/error_message" />
        <Constraint
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            app:layout_constraintBottom_toTopOf="@+id/song_artiste"
            app:layout_constraintStart_toStartOf="@+id/song_artiste"
            app:layout_constraintTop_toTopOf="@id/song_cover">

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="15" />
        </Constraint>
        <Constraint
            android:id="@+id/song_artiste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@id/song_cover"
            app:layout_constraintStart_toEndOf="@id/song_cover"
            app:layout_constraintTop_toBottomOf="@+id/song_title"
            app:layout_editor_absoluteY="607dp">

            <CustomAttribute
                app:attributeName="textSize"
                app:customFloatValue="12" />
        </Constraint>
        <Constraint
            android:id="@+id/song_loading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="72dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/song_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/song_cover" />
        <Constraint
            android:id="@+id/song_play_pause_mini"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/song_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/song_cover">
            <CustomAttribute
                app:attributeName="enabled"
                app:customBoolean="true" />
        </Constraint>
        <Constraint
            android:id="@+id/playing_queue_helper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="82dp" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:touchAnchorId="@+id/playing_queue_pill"
            app:moveWhenScrollAtTop="true" />
    </Transition>
</MotionScene>
